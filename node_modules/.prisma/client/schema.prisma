generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_MASTER")
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tenant {
  id            String    @id @default(uuid())
  restaurantId  String    @unique
  name          String
  email         String
  posType       String    // e.g., restaurant, artist, business, doctor...
  country       String?
  city          String?
  phone         String?
  planId        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  revenues      Revenue[]
  activities    ActivityLog[]
}

model Product {
  id    String @id @default(uuid())
  key   String @unique  // e.g. restaurant, artist, business
  name  String
  plans Plan[]
}

model Plan {
  id        String   @id @default(uuid())
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  name      String
  price     Int
  currency  String  @default("INR")
  features  String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Revenue {
  id        String   @id @default(uuid())
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  tenantId  String
  amount    Int
  month     Int
  year      Int
  createdAt DateTime @default(now())
}

model ActivityLog {
  id        String   @id @default(uuid())
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  tenantId  String
  type      String
  payload   Json?
  createdAt DateTime @default(now())
}
